<%= form_for [@post, @comment] do |f| %>
	<div class="row">
    <div class="col">
    	<div class="form-group">
    		<%= f.text_field :name, class: "form-control", placeholder: "Your name" %>
      </div>
    </div>
    <div class="col">
    	<div class="form-group">
      	<%= f.text_field :email, class: "form-control", placeholder: "Your Email" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_area :content, rows: "5", placeholder: "Your Comments", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "SUBMIT", class: "btn btn-dark" %>
  </div>
<% end %>