<!-- 導覽區域開始 -->
<%= render "shared/head_nav" %>
<!-- 導覽區域結束 -->

<!-- 麵包屑區域開始 -->
<section class="breadcrumb d-none d-sm-block">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-12 col-xl-12">
				<ul class="breadcrumb_link">
					<li><%= link_to "Home", root_path, class: "link_item" %></li>
					<li>Blog</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!-- 麵包屑區域結束 -->

<!-- 文章首頁區域開始 -->
<section class="post_index_area">
	<div class="container">
		<div class="row">
			<div class="col-8 col-md-8 col-xl-8">
				<div class="post_left">
					<h2>Blog</h2>
					<% @posts.each do |post| %>
						<div class="post_image">
							<%#= image_tag post.image.url, class: "img-fluid" %>
							<%= link_to post_path(post) do %>
								<%= image_tag post.image.url, class: "img-fluid" %>
							<% end %>
						</div>
						<h4><%= post.title %></h4>
						<div class="postmeta">
							<span class= "post_author">
								<i class="fa fa-user"></i>By
		      			<b>admin</b>
							</span>
							<span class= "post_date">
								<i class="far fa-calendar"></i>
								<b><%= verbose_data post.created_at %></b>
							</span>
							<span class= "post_comment">
								<i class="far fa-comments"></i>
		      			<b>10 comments</b>
							</span>
						</div>
						<div class="post_description">
							<p><%= simple_format(truncate post.description, length: 339 ) %></p>
						</div>
						<div class="read_more">
							<%= link_to "Read More...", post_path(post) %>
						</div>
					<% end %>
				</div>
			</div>
			<div class="col-4 col-md-4 col-xl-4">
				<%= render partial: "post_list", locals: {post: @posts} %>
			</div>
		</div>
	</div>
</section>
<!-- 文章首頁區域結束 -->

<!-- 頁腳區域開始 -->
<%= render "shared/footer" %>
<!-- 頁腳區域結束 -->