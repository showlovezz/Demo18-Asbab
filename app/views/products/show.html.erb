<!-- 導覽區域開始 -->
<%= render "shared/head_nav" %>
<!-- 導覽區域結束 -->

<!-- 麵包屑區域開始 -->
<section class="breadcrumb d-none d-sm-block">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-12 col-xl-12">
				<ul class="breadcrumb_link">
					<li><%= link_to "Home", root_path, class: "link_item" %></li>
					<li><%= link_to @product.category.name, category_path(@product.category), class: "link_item" %></li>
					<li>Printed Round White T-shirt</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!-- 麵包屑區域結束 -->

<!-- 產品詳細介紹區域開始 -->
<section class="product_show_area">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-xl-6 mb_20">
				<div class="left_product_image">
					<%= image_tag @product.image.url, class: "img-fluid" %>
				</div>
			</div>
			<div class="col-12 col-md-6 col-xl-6 mb_20">
				<div class="right_product_content">
					<h2><%= @product.name %></h2>
					<div class="product_rating">
						<ul>
							<li><i class="fas fa-star"></i></li>
							<li><i class="fas fa-star"></i></li>
							<li><i class="fas fa-star"></i></li>
							<li><i class="fas fa-star"></i></li>
							<li><i class="fas fa-star"></i></li>
						</ul>
						<a href="#">2 reviews</a>
					</div>
					<div class="product_price">
						<del>$<%= @product.basic_price %></del>
						<span>$<%= @product.special_price %></span>
					</div>
					<div class="product_description">
						<p><%= simple_format @product.description %></p>
					</div>
					<div class="product_btn">
						<a href="#" class="button btn1">立即購買</a>
						<a href="#" class="button btn2">新增至購物車</a>
					</div>
					<div class="product_meta">
						<span>SKU : <span class="sku">Product SKU</span></span>
						<span>Category : <span class="category"><%= @product.category.name %></span></span>
						<span>Tag : <span class="tag"><%= @product.tag %></span></span>
					</div>
					<div class="product_share">
						<span>Share :</span>
						<ul>
	          	<li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
	          	<li><a href="#"><i class="fab fa-twitter"></i></a></li>
	          	<li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
	          	<li><a href="#"><i class="fab fa-instagram"></i></a></li>
	          	<li><a href="#"><i class="fab fa-pinterest"></i></a></li>
            </ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- 產品詳細介紹區域結束 -->

<!-- 亂數產生產品區域開始 -->
<section class="random_product">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-12 col-xl-12">
				<div class="random_product_title">
					<h2 class="text-center">Related Product</h2>
				</div>
			</div>
			<% @products.each do |product| %>
				<div class="col-6 col-md-3 col-xl-3">
					<%= render partial: "shared/product_list", locals: {product: product} %>
				</div>
			<% end %>
		</div>
	</div>
</section>
<!-- 亂數產生產品區域結束 -->

<!-- 頁腳區域開始 -->
<%= render "shared/footer" %>
<!-- 頁腳區域結束 -->